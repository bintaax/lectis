{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="flex justify-center py-10 px-4" >
    <div class="w-full max-w-md shadow-lg rounded-xl p-8">

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-4xl font-bold mb-6 text-center">Créer un compte</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

            <!-- Nom  -->
            <div>
                {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.nom, {
                    'attr': {
                        'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                  focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'
                    }
                }) }}
                {{ form_errors(registrationForm.nom) }}
            </div>
            
            <!-- Prénom -->
            <div>
                {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.prenom, {
                    'attr': {
                        'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                  focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'
                    }
                }) }}
                {{ form_errors(registrationForm.prenom) }}
            </div>

            <!-- Email -->
            <div>
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                  focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'
                    }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <!-- Mot de passe -->
            <div>
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                  focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <!-- Conditions -->
            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded
                                  focus:ring-blue-500'
                    }
                }) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'ml-2 text-sm font-medium text-gray-700'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="w-full text-white font-medium rounded-lg text-sm px-5 py-2.5">
                S'inscrire
            </button>

             <p class="text-center">Vous avez déjà un compte ? <a href="{{path('app_login')}}" class ="font-bold underline">Se connecter</a></p>

        {{ form_end(registrationForm) }}

    </div>
</div>

{% endblock %}
