{% extends 'base.html.twig' %}

{% block title %}Finaliser ma commande{% endblock %}

{% block body %}

<div class="mt-20 max-w-4xl mx-auto px-6">

    <!-- TITRE -->
    <h1 class="text-3xl sm:text-4xl font-bold mb-10 text-blue-800">
        Finaliser ma commande
    </h1>

    <!-- RÉCAP PANIER -->
    <div class="bg-white shadow-lg rounded-xl p-6 mb-10 border border-gray-200">
        <h2 class="text-2xl font-semibold mb-4">Récapitulatif</h2>

        {% for ligne in lignes %}
            <div class="flex justify-between items-center border-b py-3 last:border-none">
                <div>
                    <p class="font-semibold text-lg">{{ ligne.livre.titre }}</p>
                    <p class="text-sm text-gray-500">Quantité : {{ ligne.quantite }}</p>
                </div>

                <p class="font-bold text-blue-800">
                    {{ (ligne.livre.prix * ligne.quantite) | number_format(2, ',', ' ') }} €
                </p>
            </div>
        {% endfor %}

        <div class="text-right mt-6 text-xl font-bold text-gray-800">
            Total : {{ total | number_format(2, ',', ' ') }} €
        </div>
    </div>

    <!-- INFORMATIONS CLIENT -->
    <div class="bg-white shadow-lg rounded-xl p-6 mb-10 border border-gray-200">
        <h2 class="text-2xl font-semibold mb-4">Vos informations personnelles</h2>

        <p><strong>Nom :</strong> {{ app.user.nom }}</p>
        <p><strong>Prénom :</strong> {{ app.user.prenom }}</p>
        <p><strong>Email :</strong> {{ app.user.email }}</p>
    </div>

    <!-- FORMULAIRE : ADRESSE + PAIEMENT -->
    <div class="bg-white shadow-lg rounded-xl p-6 mb-10 border border-gray-200">
        <h2 class="text-2xl font-semibold mb-6">Adresse & Paiement</h2>

        {{ form_start(form) }}

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                {{ form_row(form.adresse) }}
                {{ form_row(form.codePostal) }}
                {{ form_row(form.ville) }}
            </div>

            <div class="mt-8">
                <h3 class="text-xl font-semibold mb-3">Méthode de paiement</h3>
                {{ form_row(form.paiement) }}
            </div>

            <button class="mt-8 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold shadow">
                Valider ma commande
            </button>

        {{ form_end(form) }}
    </div>

</div>

{% endblock %}
