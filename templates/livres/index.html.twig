{% extends 'base.html.twig' %}

{% block body %}

{% for genre, livres in livresParGenre %}

    {% set genreId = genre|lower|replace({' ':'-'}) %}

    <section class="mb-12">
        <h2 class="text-2xl font-bold text-bluegray-dark mb-4">{{ genre }}</h2>

        <div class="relative">

            <!-- Bouton gauche -->
            <button 
                class="absolute left-0 top-1/2 -translate-y-1/2 z-10 bg-white/80 hover:bg-white shadow p-2 rounded-full"
                onclick="scrollLeft('{{ genreId }}')">
                ←
            </button>

            <div id="{{ genreId }}" 
                 class="flex gap-5 overflow-x-auto scroll-smooth py-4 px-2 no-scrollbar">

                {% for livre in livres %}
                    <a href="{{ path('app_livres_show', {id: livre.id}) }}"
                       class="min-w-[180px] bg-white rounded-xl shadow hover:scale-105 transition">

                        <img src="/assets/img/{{ livre.photo }}" 
                             alt="{{ livre.titre }}" 
                             class="h-56 w-full object-cover rounded-t-xl">

                        <div class="p-3">
                            <h3 class="font-semibold text-bluegray-dark text-sm truncate">
                                {{ livre.titre }}
                            </h3>
                            <p class="text-xs text-bluegray-deep">{{ livre.auteur }}</p>
                        </div>

                        <button type="button" class="text-white text-white">Voir en détail</button>

                    </a>
                {% endfor %}

            </div>

            <!-- Bouton droite -->
            <button 
                class="absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-white/80 hover:bg-white shadow p-2 rounded-full"
                onclick="scrollRight('{{ genreId }}')">
                →
            </button>

        </div>

    </section>

{% endfor %}

<script>
    function scrollLeft(id) {
        document.getElementById(id).scrollBy({left: -300, behavior: 'smooth'});
    }
    function scrollRight(id) {
        document.getElementById(id).scrollBy({left: 300, behavior: 'smooth'});
    }
</script>

{% endblock %}


