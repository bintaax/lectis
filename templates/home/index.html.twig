{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <!-- HERO -->
    <section id="hero" class="flex flex-col-reverse md:flex-row items-center justify-between px-6 md:px-12 py-16 gap-10">

        <!-- Texte -->
        <div class="text-center md:text-left max-w-xl">
            <h3 class="font-bold text-4xl md:text-5xl leading-tight mb-6">
                Découvrez notre sélection de livres
            </h3>

            <a href="{{ path('app_livres') }}"
               class="inline-block px-6 py-3 rounded-lg text-white text-lg md:text-base"
               style="background-color:#3F5366;">
               Explorer le catalogue
            </a>
        </div>

        <!-- Image -->
        <div class="w-64 h-auto md:w-[338px]">
            <img src="{{ asset('assets/img/livre.png') }}" 
                 alt="Image d'accueil"
                 class="w-full object-contain">
        </div>

    </section>


    <!-- GENRES -->
    <section id="genres" class="px-6 md:px-12 py-16 text-center" style="background-color:#CDD6E2;">
        <h2 class="text-3xl md:text-4xl font-semibold mb-10">
            Les genres que nous proposons
        </h2>

        <div class="flex flex-wrap justify-center gap-3 md:gap-4">
            {% set genres = ['Romance', 'Fantasy', 'Horreur', 'BD/Mangas', 'Thriller', 'Poésie', 'Jeunesse'] %}

            {% for genre in genres %}
                <button class="px-5 py-2 md:px-6 md:py-2.5 rounded-3xl text-sm md:text-base shadow-sm"
                        style="background-color:#EEF3F8;">
                    {{ genre }}
                </button>
            {% endfor %}
        </div>
    </section>


    <!-- BEST SELLERS -->
    <section id="best-sellers" class="px-6 md:px-12 py-16 text-center">
        <h2 class="font-bold text-4xl md:text-6xl mb-10">
            Les plus vendus
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 justify-items-center">

            {% for livre in bestSellers %}
                <div class="bg-white p-4 rounded shadow w-full max-w-[180px] sm:max-w-[200px] md:max-w-[240px]">
                    
                    <img src="/assets/img/{{ livre.photo }}" 
                         alt="{{ livre.titre }}" 
                         class="w-full h-48 sm:h-56 object-cover rounded">

                    <h3 class="font-semibold mt-3 text-lg md:text-xl">
                        {{ livre.titre }}
                    </h3>

                    <a href="{{ path('app_detail', { slug: livre.slug }) }}"
                       class="mt-4 inline-flex items-center px-4 py-2.5 text-white rounded-lg w-full justify-center text-sm md:text-base"
                       style="background-color:#3F5366;">
                        Voir le détail
                        <i class="fa-solid fa-arrow-down fa-rotate-270 ml-2"></i>
                    </a>
                </div>
            {% endfor %}

        </div>
    </section>

{% endblock %}
