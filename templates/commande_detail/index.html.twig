{% extends 'base.html.twig' %}

{% block title %}D√©tail commande #{{ commande.id }}{% endblock %}

{% block body %}
<div class="mt-24 max-w-4xl mx-auto px-6">

    <!-- TITRE -->
    <h1 class="text-3xl font-bold mb-8">
        üì¶ D√©tail de la commande #{{ commande.numeroCommande }}
    </h1>

    <!-- BANDEAU SI COMMANDE ANNUL√âE -->
    {% if commande.statut.value == 'annulee' %}
        <div class="p-4 mb-6 bg-red-100 border border-red-300 text-red-700 rounded-lg">
            ‚ùå Cette commande a √©t√© annul√©e.
        </div>
    {% endif %}

    <!-- DATE + TOTAL -->
    <div class="mb-6 text-gray-700">
        <p>Date : <strong>{{ commande.createdAt|date('d/m/Y') }}</strong></p>
        <p>Total : 
            <strong>{{ commande.total | number_format(2, ',', ' ') }} ‚Ç¨</strong>
        </p>
    </div>

    <!-- CALCUL AUTOMATIQUE DES JOURS DEPUIS LA COMMANDE -->
    {% set today = "now"|date("U") %}
    {% set created = commande.createdAt|date("U") %}
    {% set diffDays = ((today - created) / 86400)|round(0, 'floor') %}

    <!-- TIMELINE AUTOMATIQUE (SEULEMENT SI PAS ANNUL√âE) -->
    {% if commande.statut.value != 'annulee' %}
        <div class="relative border-l border-gray-300 ml-3 mb-10">

            <!-- 1. Commande pass√©e -->
            <div class="mb-6 ml-4">
                <div class="flex items-center">
                    <span class="w-4 h-4 rounded-full bg-green-500"></span>
                    <p class="ml-3 text-green-600 font-semibold">Commande pass√©e</p>
                </div>
            </div>

            <!-- 2. En pr√©paration -->
            <div class="mb-6 ml-4">
                <div class="flex items-center">
                    <span class="w-4 h-4 rounded-full 
                        {% if diffDays >= 1 %}bg-green-500{% else %}bg-gray-300{% endif %}
                    "></span>
                    <p class="ml-3 
                        {% if diffDays >= 1 %}text-green-600 font-semibold{% endif %}
                    ">
                        En pr√©paration
                    </p>
                </div>
            </div>

            <!-- 3. En cours de livraison -->
            <div class="mb-6 ml-4">
                <div class="flex items-center">
                    <span class="w-4 h-4 rounded-full 
                        {% if diffDays >= 3 %}bg-green-500{% else %}bg-gray-300{% endif %}
                    "></span>
                    <p class="ml-3 
                        {% if diffDays >= 3 %}text-green-600 font-semibold{% endif %}
                    ">
                        En cours de livraison
                    </p>
                </div>
            </div>

            <!-- 4. Livr√©e -->
            <div class="mb-6 ml-4">
                <div class="flex items-center">
                    <span class="w-4 h-4 rounded-full 
                        {% if diffDays >= 7 %}bg-green-500{% else %}bg-gray-300{% endif %}
                    "></span>
                    <p class="ml-3 
                        {% if diffDays >= 7 %}text-green-600 font-semibold{% endif %}
                    ">
                        Livr√©e
                    </p>
                </div>
            </div>

        </div>
    {% endif %}

    <!-- BOUTON ANNULER (UNIQUEMENT SI ANNULABLE ET PAS ANNUL√âE) -->
    {% if commande.statut.value != 'annulee' and diffDays < 3 %}
        <a href="{{ path('app_commande_annuler', { id: commande.id }) }}"
           class="inline-block mb-8 bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">
            Annuler la commande
        </a>
    {% elseif diffDays >= 3 and commande.statut.value != 'annulee' %}
        <p class="text-gray-500 italic mb-8">
            ‚ùå La commande ne peut plus √™tre annul√©e car elle est en cours de livraison.
        </p>
    {% endif %}

    <!-- ARTICLES COMMAND√âS -->
    <div class="bg-white p-6 rounded-xl shadow border border-gray-200">
        <h2 class="text-xl font-semibold mb-6">Articles command√©s</h2>

        {% for ligne in commande.ligneCommandes %}
            <div class="flex justify-between items-center py-4 border-b last:border-none">
                <div>
                    <p class="font-semibold">{{ ligne.livre.titre }}</p>
                    <p class="text-gray-500 text-sm">Quantit√© : {{ ligne.quantite }}</p>
                </div>

                <p class="font-bold">
                    {{ (ligne.livre.prix * ligne.quantite) | number_format(2, ',', ' ') }} ‚Ç¨
                </p>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_compte') }}"
       class="inline-block font-bold mt-6 hover:underline">
        ‚Üê Retour √† mon espace personnel
    </a>

</div>
{% endblock %}
